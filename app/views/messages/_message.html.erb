<%= turbo_frame_tag(dom_id message) do %>
  <div
    class="mx-auto rounded shadow-lg border overflow-hidden mt-5 bg-white <%= "animate__animated animate__backInLeft" if defined?(just_created) %>"
    data-controller="message-appears"
  >
    <div class="p-4 text-sm font-medium text-gray-700">
      <%= markdown(message.text) %>
    </div>
  </div>
<% end %>
